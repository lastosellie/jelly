                        <Blend />
                     </effect>
                  </ComboBox>
                  <Pane layoutX="1.0" layoutY="516.0" prefHeight="60.0" prefWidth="398.0">
                     <children>
                        <TextField fx:id="Inputmsg" layoutX="17.0" layoutY="22.0" onKeyPressed="#sendMsg" prefHeight="40.0" prefWidth="392.0" promptText="Type your message here!" style="-fx-background-color: transparent; -fx-border-style: solid; -fx-border-color: lightgrey; -fx-border-radius: 50;">
