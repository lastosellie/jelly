<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ChatController">
   <children>
      <Pane layoutX="20.0" layoutY="1.0" prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: transparent;">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <children>
            <Pane layoutX="568.0" layoutY="12.0" prefHeight="576.0" prefWidth="409.0" style="-fx-background-color: #FFFAFA;">
               <children>
                  <TextArea fx:id="textarea" layoutX="14.0" layoutY="42.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="488.0" prefWidth="383.0" promptText="Welcome to the Chatroom!">
                     <font>
                        <Font name="Calibri Light" size="15.0" />
                     </font></TextArea>
                  <MenuBar fx:id="Menubar" layoutX="49.0" layoutY="-2.0" prefHeight="32.0" prefWidth="361.0" style="-fx-background-color: white;">
