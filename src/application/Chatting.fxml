                        <ImageView fx:id="Send" fitHeight="29.0" fitWidth="28.0" layoutX="363.0" layoutY="28.0" onMouseClicked="#sendMsg" opacity="0.93" pickOnBounds="true">
                           <image>
                              <Image url="@../../image/send.png" />
                           </image>
                        </ImageView>
                     </children>
                  </Pane>
               </children>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </Pane>
         </children>
      </Pane>
