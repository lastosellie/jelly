                        <items>
                          <MenuItem mnemonicParsing="false" text="About" />
                        </items>
                      </Menu>
                    </menus>
                     <cursor>
                        <Cursor fx:constant="NONE" />
                     </cursor>
                     <padding>
                        <Insets left="100.0" />
                     </padding>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </MenuBar>
                  <ComboBox fx:id="Teamlist" prefHeight="29.0" prefWidth="124.0" promptText="TEAM-A" style="-fx-background-color: white;" visibleRowCount="5">
